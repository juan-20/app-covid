<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:layout_editor_absoluteX="-28dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageView
                android:id="@+id/img_1_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_1"
                tools:layout_editor_absoluteX="197dp" />

            <TextView
                android:id="@+id/text1_idosos"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Dormir em cama separada"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/img_2_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_2" />

            <TextView
                android:id="@+id/text2_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Ultilizar banheiros diariamente e desinfetá-los com água sanitária."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_3_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="2"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_3" />

            <TextView
                android:id="@+id/text3_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Não compartilhar toalhas, talherrs, copos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_4_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="3"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_4" />

            <TextView
                android:id="@+id/text4_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Limpe e desinfete diariamente superfícies de alto contato"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_5_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="4"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_5" />

            <TextView
                android:id="@+id/text5_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Lave roupas, lençóis e toalhas com mais frequência."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_6_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="5"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_6" />


            <TextView
                android:id="@+id/text6_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Manter distância, dormir em quartos separados"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_7_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="6"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_7" />

            <TextView
                android:id="@+id/text7_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Manter os quartos ventilados"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_8_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="7"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_8" />

            <TextView
                android:id="@+id/text8_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Ligue para o número 136, se houver mais de 38º de febre e dificuldade em respirar.  "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/img_9_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="8"
                android:layout_column="0"
                app:srcCompat="@drawable/gp_9" />

            <TextView
                android:id="@+id/text9_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Não quebre a quarentena por 2 semanas. Toda saída de casa é uma reinicialização no contador."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
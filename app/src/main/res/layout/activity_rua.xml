<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rua"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-64dp"
        tools:layout_editor_absoluteY="-176dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:layout_editor_absoluteX="-28dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageView
                android:id="@+id/img_1_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/casa1"
                tools:layout_editor_absoluteX="197dp" />

            <TextView
                android:id="@+id/text1_idosos"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Ao voltar pra casa não toque em nada antes de higienizar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/img_2_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="1"
                android:layout_column="0"
                app:srcCompat="@drawable/casa2" />
            <TextView
                android:id="@+id/text2_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Tire os sapatos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_3_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="2"
                android:layout_column="0"
                app:srcCompat="@drawable/casa3" />

            <TextView
                android:id="@+id/text3_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Desinfete as patas do seu pet após passear com ele."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_4_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="3"
                android:layout_column="0"
                app:srcCompat="@drawable/casa4" />

            <TextView
                android:id="@+id/text4_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Tire a roupa e coloque-a em uma sacola plástica no cesto de roupas."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_5_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="4"
                android:layout_column="0"
                app:srcCompat="@drawable/casa5" />

            <TextView
                android:id="@+id/text5_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Deixe bolsa, carteira, chaves, etc, em uma caixa na entrada."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_6_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="5"
                android:layout_column="0"
                app:srcCompat="@drawable/casa6" />


            <TextView
                android:id="@+id/text6_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Tome banho! Se não puder, lave bem todas as áreas expostas."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_7_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="6"
                android:layout_column="0"
                app:srcCompat="@drawable/casa7" />

            <TextView
                android:id="@+id/text7_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Limpe seu celular e os óculos com sabão e água ou álcool"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_8_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="7"
                android:layout_column="0"
                app:srcCompat="@drawable/casa8" />

            <TextView
                android:id="@+id/text8_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Limpe as embalagens que trouxe de fora antes de guardar"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/img_9_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="8"
                android:layout_column="0"
                app:srcCompat="@drawable/casa9" />
            <TextView
                android:id="@+id/text9_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Tire as luvas com cuidado e lave as mãos"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/img_10_casa"
                android:layout_width="91dp"
                android:layout_height="181dp"
                android:layout_row="8"
                android:layout_column="0"
                app:srcCompat="@drawable/casa10" />
            <TextView
                android:id="@+id/text10_casa"
                android:layout_width="242dp"
                android:layout_height="73dp"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_gravity="center"
                android:text="Lembre-se que não é possível fazer uma desinfeccão total, o objetivo é diminuir o risco."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:visibility="visible" />


        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>